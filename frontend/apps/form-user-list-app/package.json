{
    "name": "@wbk--mern-playground/form-user-list-app",
    "private": true,
    "version": "0.2.1",
    "type": "module",
    "scripts": {
        "develop": "concurrently \"yarn compile:watch\" \"vite --host\"",
        "compile": "yarn tsc --noEmit",
        "compile:watch": "yarn tsc --noEmit --watch",
        "build": "export NODE_ENV=production && yarn compile && yarn lint && vite build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "preview": "vite preview",
        "package": "bash scripts/package.bash",
        "test": "jest",
        "test:update": "jest --verbose --coverage --updateSnapshot",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.23.9",
        "@babel/preset-typescript": "^7.23.3",
        "@testing-library/jest-dom": "^6.1.3",
        "@testing-library/react": "^14.0.0",
        "@types/jest": "^29.5.5",
        "@types/react": "^18.2.27",
        "@types/react-dom": "^18.2.12",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "@vitejs/plugin-react": "^4.0.3",
        "babel-jest": "^29.7.0",
        "eslint": "^8.45.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.3",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "react": "^18.3.1",
        "react-dom": "^18.2.0",
        "sass": "^1.69.5",
        "typescript": "^5.2.2",
        "vite": "^4.4.5"
    }
}

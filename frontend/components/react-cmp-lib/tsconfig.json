{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "lib",
        "module": "esnext",
        "lib": ["DOM", "ESNext"],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "target": "esnext",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true,
        "moduleResolution": "node",
        "types": ["node", "jest"]
    },
    "include": ["src"],
    "exclude": ["node_modules", "lib"]
}

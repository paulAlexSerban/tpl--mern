{
    "name": "@wbk--mern-playground/ecommerce-monolith-mvc-ssr-service",
    "version": "0.1.1",
    "private": true,
    "main": "dist/bin/www.js",
    "scripts": {
        "develop": "concurrently \"yarn tsc --watch\" \"nodemon -q /dist/bin/www.js\"",
        "start": "pm2 start ./dist/bin/www.js -i 0",
        "stop": "pm2 delete www",
        "monitor": "pm2 monit",
        "build": "yarn tsc"
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "concurrently": "^8.2.2",
        "cookie-parser": "~1.4.4",
        "debug": "~2.6.9",
        "ejs": "^3.1.10",
        "express": "^4.18.2",
        "morgan": "~1.9.1",
        "pm2": "^5.3.1"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.6",
        "@types/debug": "^4.1.12",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.0",
        "nodemon": "^2.0.22",
        "typescript": "^5.2.2"
    }
}

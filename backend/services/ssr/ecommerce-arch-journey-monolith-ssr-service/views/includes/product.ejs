<div class="card">
    <a><img class="card-img-top" src="<%= product.image.url %>" alt="<%= product.image.alt %>" /></a>
    <div class="card-body">
        <h4 class="card-title"><a class="color-main"><%= product.name %></a></h4>
        <p class="card-text"><%= product.summary %></p>
        <div class="row">
            <div class="col">
                <p class="btn btn-danger btn-block"><%= product.price %> $</p>
            </div>
            <div class="col">
                <form method="post" name="addToCartForm" id="add_cart_form">
                    <a href="javascript:;" 
                       onclick="parentNode.submit();" 
                       class="btn btn-success btn-block" >Add to Cart</a>
                    <input type="hidden" name="productId" />
                </form>
            </div>
        </div>
    </div>
</div>
<div class="col-12 col-md-3">
    <div class="card">
        <div class="card-header bg-success text-white text-uppercase">
            <i class="fa fa-heart"></i> Top product
        </div>
        <a href="/products/pid"><img class="img-fluid border-0" src="<%= product.image.url %>" alt="Card image cap"></a>
            <div class="card-body">
                <h4 class="card-title text-center"><a href="/products/pid" title="View Product"><%= product.name %></a></h4>
                <div class="row">
                    <div class="col">
                        <p class="btn btn-danger btn-block"><%= product.price %> $</p>
                    </div>
                    <div class="col">
                        <a href="/products/pid" class="btn btn-success btn-block">View</a>
                    </div>
                </div>
            </div>
    </div>
</div>
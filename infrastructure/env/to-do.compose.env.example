# Must be lower-case, no spaces and no invalid path chars.
COMPOSE_PROJECT_NAME="to-do-app"

# 4/ Ports: Can be changed -------------------------------------------
API_PORT=3000
NODE_DOCKER_PORT=3000

# 6/ MongoDB: Should be changed with the regarding values --------------------------------
MONGO_USERNAME=root
MONGO_PASSWORD=example
MONGO_HOSTNAME=mongo-service

# 7/ MongoDB: Should be changed with the regarding values --------------------------------
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=example

# 8/ MongoDB: Should be changed with the regarding values --------------------------------
MONGO_PORT=27017
MONGO_DB=jobs
DB_LOCAL_URI="mongodb://${MONGO_USERNAME}:${MONGO_PASSWORD}@${MONGO_HOSTNAME}:${MONGO_PORT}/${MONGO_DB}?authMechanism=DEFAULT&authSource=admin"

# 10/ Environment: Should be changed with the regarding values --------------------------------
NODE_ENV=development
---
version: '3.7'
networks:
    {{infrastructure_docker-simple-slug}}-network:
        driver: bridge
services:
    # ---------------------------------------------------------------------
    # | Proxy-Service - Nginx                                              |
    # ---------------------------------------------------------------------
    nginx-proxy:
        build:
            context: ../../backend/middleware/{{infrastructure_docker-simple-slug}}-proxy
            dockerfile: dev.Dockerfile
        container_name: container-{{infrastructure_docker-simple-slug}}-proxy
        image: paulserbandev/{{infrastructure_docker-simple-slug}}-proxy
        restart: unless-stopped
        ports:
            - '3000:80'
        volumes:
            - ../../backend/middleware/{{infrastructure_docker-simple-slug}}-proxy/default.conf:/etc/nginx/conf.d/default.conf
            - ../../backend/middleware/{{infrastructure_docker-simple-slug}}-proxy/logs:/var/log/nginx
        networks:
            - {{infrastructure_docker-simple-slug}}-network

    # ---------------------------------------------------------------------
    # UI React SPA
    # ---------------------------------------------------------------------
    ui-react-spa:
        container_name: ui-react-spa-container
        build:
            context: ../../frontend/apps/{{infrastructure_docker-simple-slug}}-app
            dockerfile: dev.Dockerfile
        volumes:
            - ../../frontend/apps/{{infrastructure_docker-simple-slug}}-app:/usr/src/app # Mount the app directory to the container
            - /usr/src/app/node_modules # Avoids overwriting node_modules with local volume
        networks:
            - {{infrastructure_docker-simple-slug}}-network
